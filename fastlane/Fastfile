# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
	
	desc "Tests"
  	lane :tests do
    	scan(
    		scheme: "WeatherApp",
    		device: "iPhone 12 Pro Max"	 
    	)
  	end

  	desc "Lint"
  	lane :lint do
    	swiftlint(
    		output_file: "swiftlint.json",
    		reporter: "json"
    	)
  	end

end
